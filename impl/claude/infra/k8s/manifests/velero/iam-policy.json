{
  "_comment": "IAM Policy for Velero Cluster Backup - Least Privilege",
  "_usage": "Create IAM user/role with this policy for Velero service account",
  "_agentese": "world.gateway.velero.iam",
  "_note": "Velero requires broader permissions for EBS snapshots if snapshotVolumes=true",
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "VeleroS3Access",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObjectVersion",
        "s3:DeleteObjectVersion"
      ],
      "Resource": "arn:aws:s3:::kgents-dr-backups/velero/*"
    },
    {
      "Sid": "VeleroS3List",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": "arn:aws:s3:::kgents-dr-backups"
    },
    {
      "Sid": "VeleroEC2Snapshots",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeVolumes",
        "ec2:DescribeSnapshots",
        "ec2:CreateTags",
        "ec2:CreateVolume",
        "ec2:CreateSnapshot",
        "ec2:DeleteSnapshot"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "ec2:ResourceTag/kubernetes.io/cluster/kgents-cluster": "owned"
        }
      }
    }
  ]
}
